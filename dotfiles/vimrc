set nocompatible

runtime bundle/vim-pathogen/autoload/pathogen.vim
execute pathogen#infect()

syntax on
filetype plugin indent on

set nu
set wrap
set noswapfile
set nobackup
set nowritebackup

set winheight=5
set winminheight=5

set tabstop=2
set shiftwidth=2
set expandtab

set showmatch
set matchtime=1

set wildmenu

set path=**
nnoremap <leader>f :find *

set incsearch
set hlsearch
set ignorecase
set smartcase

set hidden

set laststatus=2

set cursorline
set scrolloff=5

set pastetoggle=<F2>
nnoremap <F3> :NERDTreeToggle<CR>
nnoremap <F5> :GundoToggle<CR>
nnoremap <F6> :TagbarToggle<CR>
nnoremap <leader>l :ls<cr>:b<space>
nnoremap <leader>r :source ~/.vimrc<CR>
nnoremap <leader>c :ccl<CR>
nnoremap <leader>a :Ag<space>""<left>
nnoremap <leader>dc :!drush cc all<CR>
cnoremap <expr> %% expand('%:h').'/'

nnoremap <silent> <C-h> :TmuxNavigateLeft<cr>
nnoremap <silent> <C-j> :TmuxNavigateDown<cr><C-W>_
nnoremap <silent> <C-k> :TmuxNavigateUp<cr><C-W>_
nnoremap <silent> <C-l> :TmuxNavigateRight<cr>
nnoremap <silent> <C-\> :TmuxNavigatePrevious<cr>

" search for tags up to home directory
set tags+=tags;~

" set ttyfast

set showcmd

set ruler

set list
set listchars=tab:>-,trail:Â·

set backspace=indent,eol,start

highlight ExtraWhitespace ctermbg=red guibg=red
match ExtraWhitespace /\s\+$/

set mouse=a

set clipboard=unnamed

" enables split resizing with mouse
if &term =~ '^screen'
  " tmux knows the extended mouse mode
  set ttymouse=xterm2
endif

inoremap <F1> <nop>
nnoremap <F1> <nop>
vnoremap <F1> <nop>

" Save as sudo
cmap w!! w !sudo tee > /dev/null %

let g:syntastic_javascript_checkers = ['jshint']
let g:syntastic_php_checkers=['php']
let g:syntastic_scss_checkers = ['scss_lint']

" The Silver Searcher
if executable('ag')
  " Use ag over grep
  "set grepprg=ag\ --nogroup\ --nocolor

  " Use ag in CtrlP for listing files. Lightning fast and respects .gitignore
  let g:ctrlp_user_command = 'ag %s -l --nocolor -g ""'

  " ag is fast enough that CtrlP doesn't need to cache
  let g:ctrlp_use_caching = 0
endif

let g:ag_prg = 'ag --nogroup --column --depth -1 --ignore node_modules'

set t_Co=256
set background=dark

"let g:hybrid_use_iTerm_colors = 1
colorscheme hybrid

let g:pad#dir = "~/notes/"
let g:pad#search_backend = "ag"
let g:pad#window_height = 20

let g:ctrlp_max_files = 0
let g:ctrlp_match_window = 'bottom,order:btt,min:1,max:10,results:50'
let g:ctrlp_working_path_mode = 0
